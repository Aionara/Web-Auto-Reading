{
  "manifest_version": 3,
  "name": "自动阅读器",
  "description": "自动滚动页面并循环阅读，适用于展示型网页。",
  "version": "1.1",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_title": "自动阅读器",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
